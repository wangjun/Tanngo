<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_book_name"
        android:text="detail_book_name"
        android:textSize="32sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/primary"
        android:id="@+id/detail_download_book"
        android:text="下载词典"/>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_words_count"
        android:text="detail_words_count"
        android:layout_margin="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_level"
        android:text="detail_level"
        android:layout_margin="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_author"
        android:text="detail_author"
        android:layout_margin="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_price"
        android:text="detail_price"
        android:layout_margin="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_describe"
        android:text="detail_describe"
        android:layout_margin="16dp"
        android:textSize="16sp"/>




</LinearLayout>
